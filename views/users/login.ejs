<% layout("/layouts/boilerplate.ejs") %>

    <div class="row mt-3">
        <h1 class="col-10 offset-1" style="color: white;">Login</h1>
        <div class="col-10 offset-1 mb-3">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input id="username" name="username" type="text" placeholder="Enter your username here"
                        class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <input id="password" name="password" type="password" placeholder="Create a Strong Password"
                            class="form-control" required>
                        <span class="input-group-text" id="basic-addon1">
                            <i class="fa-solid fa-eye" id="showPass"></i>
                            <i class="fa-solid fa-eye-slash" id="hidePass" style="display: none;"></i>
                        </span>
                    </div>
                </div>
                <button class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>

    <script>
        let password = document.getElementById("password");
        let showPass = document.getElementById("showPass");
        let hidePass = document.getElementById("hidePass");

        showPass.addEventListener("click", () => {
            if (password.type === "password") {
                password.type = "text";
                showPass.style.display = "none";
                hidePass.style.display = "inline";
            }
        });

        hidePass.addEventListener("click", () => {
            if (password.type === "text") {
                password.type = "password";
                hidePass.style.display = "none";
                showPass.style.display = "inline";
            }
        });
    </script>